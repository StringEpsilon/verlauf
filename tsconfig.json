{
	"compilerOptions": {
		"declaration": false,
		"lib": ["es5", "dom"],
		"allowSyntheticDefaultImports": true,
		"module": "es2015",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"target": "es5",
		"allowUnreachableCode": false,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"strict": true
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"**/__tests__/**"
	],
	"typeAcquisition": {
        "include": [
            "jest"
        ]
    }
}
