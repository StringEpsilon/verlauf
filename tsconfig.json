{
	"compilerOptions": {
		"declaration": false,
		"lib": [ "dom"],
		"allowSyntheticDefaultImports": true,
		"module": "ES2020",
		"moduleResolution": "node",
		"esModuleInterop": false,
		"target": "ES5",
		"allowUnreachableCode": false,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"strict": true,
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"**/__tests__/**"
	],
	"typeAcquisition": {
        "include": [
            "jest"
        ]
    }
}
